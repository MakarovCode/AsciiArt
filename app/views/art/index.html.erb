<div style="text-align: center; padding-top: 40px;">
  <div class="row" style="text-align: center;">
    <div class="col s12 m6 offset-m3">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Transform your image to Ascii Art for Free</span>
          <p>
            Simple!!. Just upload your image, I will take care of it.
          </p>
        </div>
        <div class="card-action">
          <a href="#"><i class="fab fa-twitter"></i> @DonOneFallen</a>
          <a href="#"><i class="fab fa-twitch"></i> DonOneFallen</a>
          <a href="#"><i class="fab fa-instagram"></i> DonOneFallen</a>
        </div>
      </div>
      <% unless params[:error].blank? %>
      <div class="card-panel yellow darken-3teal lighten-2">
        <i class="fad fa-exclamation-triangle fa-5x"></i>  <br>
        <%= params[:error] %>
      </div>
      <% end %>
    </div>
  </div>
  <%= form_tag('/art', method: :post, multipart: true) do %>
  <div class="btn waves-effect waves-light btn-large">
    <div class="file-field">
      <i class="material-icons">attach_file</i>
      <span>
        Select Image
      </span>
      <input type="file" name="file">
    </div>
  </div>
  <button type="submit" class="waves-effect waves-light btn-large orange darken-3">
    <i class="material-icons left">brush</i>
    Go!
  </button>
  <% end %>

  <% unless @image_ori.blank? %>
  <div class="row" style="text-align: center;">
    <div class="col s12 m3 offset-m3">
      <%= image_tag @image_ori.source.art.url, style: "width: 384px;" %>
    </div>
    <div class="col s12 m3">
      <div style="width: 384px;">
        <%= @image_ori.art %>
      </div>
    </div>
  </div>
  <% end %>
</div>
